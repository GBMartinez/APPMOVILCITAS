<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:background="@color/colorBlanco"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include
        android:id="@+id/include_toolbar_base"
        layout="@layout/activity_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/text_dni_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:ems="10"
                android:hint="DNI"
                android:paddingLeft="20dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_border_edittext"
                android:gravity="left|center" >
            </EditText>

            <EditText
                android:id="@+id/text_nombre_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:ems="10"
                android:hint="Nombres"
                android:paddingLeft="20dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_border_edittext"
                android:gravity="left|center" >
            </EditText>

            <EditText
                android:id="@+id/text_paterno_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:ems="10"
                android:hint="Apellido Paterno"
                android:paddingLeft="20dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_border_edittext"
                android:gravity="left|center" >
            </EditText>

            <EditText
                android:id="@+id/text_materno_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:ems="10"
                android:hint="Apellido Materno"
                android:paddingLeft="20dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_border_edittext"
                android:gravity="left|center" >
            </EditText>

            <EditText
                android:id="@+id/text_fecha_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:focusable="false"
                android:layout_centerVertical="true"
                android:ems="10"
                android:inputType="date"
                android:hint="Fecha de Nacimiento"
                android:paddingLeft="20dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_border_edittext"
                android:gravity="left|center" >
            </EditText>

            <RadioGroup
                android:id="@+id/opciones_sexo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/rounded_border_edittext"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_masculino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:checked="true"
                    android:text="Masculino" />

                <RadioButton
                    android:id="@+id/radio_femenino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Femenino" />
            </RadioGroup>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/button_next_register"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center|bottom"
                android:layout_margin="10dp"
                android:textColor="@color/colorBlanco"
                android:backgroundTint="@color/mateAzul"
                android:text="Siguiente" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>